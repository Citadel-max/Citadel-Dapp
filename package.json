{
  "name": "citadel-Dapp",
  "version": "1.0.0",
  "description": "Simple dubhe sui 101 starter template",
  "scripts": {
    "// Utility Commands": "----------------",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "validate": "pnpm format:check && pnpm type-check",
    "start:localnet": "pnpm dubhe node",
    "faucet": "node dubhe-wrapper.js faucet --network",
    "deploy": "node dubhe-wrapper.js publish --network",
    "upgrade": "pnpm dubhe upgrade --network",
    "schema:gen": "pnpm dubhe schemagen",
    "account:gen": "node dubhe-wrapper.js generate-key --output-ts-path ./src/chain/key.ts",
    "indexer:sqlite": "pnpm sqlite-indexer --force-regenesis --network",
    "check-balance": "pnpm dubhe check-balance --network",
    "config:store": "node dubhe-wrapper.js config-store --output-ts-path ./src/chain/config.ts --network",
    "// Development Environment": "----------------",
    "dev": "pnpm dev:localnet",
    "dev:localnet": "pnpm setup:localnet && pnpm next",
    "dev:testnet": "pnpm setup:testnet && pnpm next",
    "dev:mainnet": "pnpm setup:mainnet && pnpm next",
    "dev:devnet": "pnpm setup:devnet && pnpm next",
    "setup:localnet": "pnpm account:gen && pnpm faucet localnet && pnpm run deploy localnet && pnpm run config:store localnet",
    "setup:testnet": "pnpm account:gen && pnpm check-balance testnet && pnpm run deploy testnet && pnpm run config:store testnet",
    "setup:mainnet": "pnpm account:gen && pnpm check-balance mainnet && pnpm run deploy mainnet && pnpm run config:store mainnet",
    "setup:devnet": "pnpm account:gen && pnpm check-balance devnet && pnpm run deploy devnet && pnpm run config:store devnet",
    "build": "next build",
    "start": "next start",
    "// Production Environment": "----------------",
    "prod:localnet": "pnpm config:store localnet && pnpm next",
    "prod:testnet": "pnpm config:store testnet && pnpm next",
    "prod:mainnet": "pnpm config:store mainnet && pnpm next",
    "prod:devnet": "pnpm config:store devnet && pnpm next"
  },
  "dependencies": {
    "@0xobelisk/sui-cli": "1.1.10",
    "@0xobelisk/sui-client": "1.1.12",
    "@0xobelisk/sui-common": "1.1.11",
    "@0xobelisk/sui-indexer": "1.1.14",
    "@mysten/dapp-kit": "^0.16.12",
    "@mysten/sui": "^1.33.0",
    "@mysten/sui.js": "^0.54.1",
    "@mysten/wallet-adapter-react": "^11.0.0",
    "@mysten/wallet-kit": "^0.8.6",
    "@mysten/wallet-standard": "^0.16.2",
    "@tanstack/react-query": "^5.80.7",
    "dotenv": "^16.5.0",
    "jotai": "^1.7.2",
    "next": "15.1.6",
    "node-fetch": "^3.3.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "^1.5.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^18",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^8.56.0",
    "eslint-config-next": "15.1.6",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8",
    "prettier": "3.3.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "resolutions": {
    "esbuild": "0.17.19"
  }
}
